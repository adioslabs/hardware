encoding UTF-8

defscrollback 50000
startup_message off
altscreen on
term xterm-color

escape ^Zz

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H (3) %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W} %n %t %?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{W} %c %{g}]'

screen -t "transmit" bash -c 'while true; do ruby transmit.rb 2>> transmit-errors.log; sleep 1; done'
screen -t "receive" bash -c 'python3 -u receive.py 2>> receive-errors.log | tee -a data/readings.tsv'
